<div class="articles-content">
  <%= link_to image_tag(article.image, class: "articles-image"), article_path(article.id) %>
  <%= link_to article.title, article_path(article.id), class: "articles-title" %>
  <div class="new-article-category">カテゴリー：<%= link_to article.category.name, root_path %></div>
  <div class="new-article-nickname">筆者：<%= link_to article.user.nickname, users_path(article.user_id) %></div>
</div>