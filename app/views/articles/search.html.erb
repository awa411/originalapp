<%= render "shared/header" %>
<div class="middle">
  <div class="side">
    <%= render partial: "shared/side" %>
  </div>
  <div class="main">
    <div class="page-text">
      <% unless params[:q][:title_cont] == nil || params[:q][:title_cont] == "" %>
        タイトル「<%= params[:q][:title_cont] %>」
          <% unless params[:q][:category_id_eq] == nil || params[:q][:category_id_eq] == "" %>
            カテゴリー：<%= Category.find(params[:q][:category_id_eq]).name %>
          <% end %>
      <% else %>
          <% unless params[:q][:category_id_eq] == nil || params[:q][:category_id_eq] == "" %>
            カテゴリー：<%= Category.find(params[:q][:category_id_eq]).name %>
          <% else %>
            みんなの投稿記事
          <% end %>
      <% end %>
    </div>
    <div class="article-wrapper">
    <% if @results.length !=0 %>
      <% @results.each do |article| %>
        <div class="article-content">
          <%= link_to image_tag(article.images[0], class: "article-image"), article_path(article.id) %>
          <%= link_to article.title, article_path(article.id), class: "article-title" %>
          <div class="article-category">カテゴリー：<%= link_to article.category.name, root_path %></div>
          <div class="article-nickname">筆者：<%= link_to article.user.nickname, user_path(article.user_id) %></div>
        </div>
      <% end %>
    <% else %>
      該当する記事はありません
    <% end %>  

    </div>
  </div>
</div>
<%= render "shared/footer" %>
